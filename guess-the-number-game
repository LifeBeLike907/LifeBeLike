import random

def guess_the_number():
    print("Welcome to the Guess the Number Game!")
    print("I have selected a number between 1 and 100.")
    
    # Generate a random number between 1 and 100
    number_to_guess = random.randint(1, 100)
    number_of_guesses = 0
    has_guessed_correctly = False
    
    while not has_guessed_correctly:
        # Get guess from the user
        user_guess = input("Please enter your guess (or type 'exit' to quit): ")
        
        if user_guess.lower() == 'exit':
            print("Thank you for playing! Goodbye.")
            break

        try:
            user_guess = int(user_guess)
        except ValueError:
            print("That's not a valid number! Please try again.")
            continue

        number_of_guesses += 1

        # Compare the user's guess to the number to guess
        if user_guess < number_to_guess:
            print("Too low! Try again.")
        elif user_guess > number_to_guess:
            print("Too high! Try again.")
        else:
            has_guessed_correctly = True
            print(f"Congratulations! You've guessed the number {number_to_guess} in {number_of_guesses} attempts!")

if __name__ == "__main__":
    guess_the_number()
